#!/bin/bash

DOTFILES_DIR=$PWD
mv ~/.bashrc ~/.bashrc_bak
mv ~/.bash_profile ~/.bash_profile_bak
stow .

mkdir -p ~/src
cd ~/src
for i in dmenu dwm st slock
do
	git clone git://git.suckless.org/${i} || exit 99
	cd ${DOTFILES_DIR}/suckless/${i}
	for j in *
	do
		ln -sn ${DOTFILES_DIR}/suckless/${i}/${j} ~/src/${i}
	done
	cd -
done

mkdir -p ~/.config
cd ${DOTFILES_DIR}/config
for i in *
do
	ln -sn ${DOTFILES_DIR}/config/${i} ~/.config/
done

cd

ln -sn /tmp/test_${USER} ~/test
